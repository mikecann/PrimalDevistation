<?xml version="1.0" encoding="utf-8" ?>

<weapon name="vortex" type="vortex">
	<properties>
		<texture>gravity-bomb</texture>
		<friction>1</friction>
		<strength>0.1</strength>
		<reach>300</reach>
		<airResistance>0.95</airResistance>
